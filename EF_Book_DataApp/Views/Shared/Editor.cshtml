@model Product

@{ 
    ViewData["Title"] = ViewBag.CreateMode ? "Create" : "Edit";
    Layout = "_Layout";
}

<form asp-action="@(ViewBag.CreateMode ? "Create" : "Edit")" method="post">

    <input type="hidden" name="original.ProductId" value="@Model?.ProductId" />
    <input type="hidden" name="original.Name" value="@Model?.Name" />
    <input type="hidden" name="original.Category" value="@Model?.Category" />
    <input type="hidden" name="original.Price" value="@Model?.Price" />

    <input type="hidden" asp-for="ProductId" value="@Model.ProductId" />

    <div class="row m-1">
        <div class="col-6">
            <h5 class="bg-info text-center p-2 text-white">Товар</h5>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Category"></label>
                <input asp-for="Category" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
            </div>
        </div>
        <div class="col-6">
            <h5 class="bg-info text-center p-2 text-white">Поставщик</h5>
            @await Html.PartialAsync("Supplier", Model)
        </div>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отменить</a>
    </div>
</form>