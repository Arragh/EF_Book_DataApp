@model Supplier

@{ 
    int counter = 0;
}

<form asp-action="Update" method="post">

    <input type="hidden" asp-for="SupplierId" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="City" />

    @foreach (var p in Model.Products)
	{
		 <input type="hidden" name="Products[@counter].ProductId" value="@p.ProductId" />
         <input type="hidden" name="Products[@counter].Name" value="@p.Name" />
         <input type="hidden" name="Products[@counter].Category" value="@p.Category" />
         <input type="hidden" name="Products[@counter].Price" value="@p.Price" />
         counter++;
	}

    <div class="row">
        <div class="col">
            <input name="Products[@counter].Name" value="" class="form-control" />
        </div>
        <div class="col">
            <input name="Products[@counter].Category" value="" class="form-control" />
        </div>
        <div class="col">
            <input name="Products[@counter].Price" value="" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col text-center m-1">
            <button class="btn btn-sm btn-danger" type="submit">Сохранить</button>
            <a class="btn btn-sm btn-secondary" asp-action="Index">Назад</a>
        </div>
    </div>

</form>